<%- include('partials/header', {
    title: 'Show Page'
}) %>
    <h1>Edit Page</h1>
    <form action="/players" method="POST">
        Name: <input type="text" name="name" value="<%=player.name%>" /><br/>
        Team: <input type="text" name="team" value="<%=player.team%>" /><br/>
        Position: <input type="text" name="position" value="<%=player.position%>" /><br/>
        Injured: <input type="checkbox" name="injured"
         <% if(player.injured === true){ %>
            checked
        <% } %>
          /><br/>
        Sponsors: <input type="text" name="sponsors" value="<%=sponsors%>" /><br/>
        <input type="submit" name="" value="Add Player"/>
    </form>
<%- include('partials/footer') %>